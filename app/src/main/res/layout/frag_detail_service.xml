<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_dservice_frag_close"
        android:layout_alignParentEnd="true"
        android:tint="@color/greyfive"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_cancel_24dp"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/iv_dservice_frag_image"
        android:layout_below="@id/iv_dservice_frag_close"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/tv_dservice_title"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_dservice_frag_image"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        tools:text="Painting"/>
    <TextView
        android:id="@+id/tv_dservice_frag_details"
        android:layout_below="@id/tv_dservice_title"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="bfmndbfmnbdsmbfdmnsfdsvfvdsfvdsvfmdsvf dfvsmvfmdsvf fvdmsvfmsdvfsvf dfbdbfb bfndb dfdnsbf fbdnbfmdsfbmdsbf fmbdbfdkmsf dmfbdmsbfmdsbfdms"/>

</RelativeLayout>
