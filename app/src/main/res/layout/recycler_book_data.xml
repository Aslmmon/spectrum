<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:layout_alignParentStart="true"
        android:tint="@color/colorAccent"
        android:layout_centerVertical="true"
        android:id="@+id/image_date"
        app:srcCompat="@drawable/clean_book_recy_calendar_green_big"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/tv_date"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="25-01-2018"/>
    <ImageView
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/clean_book_recy_time_alarm"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/tv_date"
        android:id="@+id/image_time"
        android:layout_centerVertical="true"
        android:layout_width="22dp"
        android:layout_height="22dp"
       />
    <TextView
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/image_time"
        android:id="@+id/tv_time"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="8:00 am - 9:00 am"/>
    <ImageView
        app:srcCompat="@drawable/clean_book_recy_delete_button"
        android:layout_alignParentEnd="true"
        android:id="@+id/iv_delete"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true" />


</RelativeLayout>
