<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:clickable="true"
    android:id="@+id/relative_extra_service"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:elevation="2dp"
        android:padding="2dp"
        android:id="@+id/iv_extra_service_tick"
        android:layout_margin="20dp"
        android:layout_alignParentEnd="true"
       android:background="@drawable/round_bg_grey"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_check_black_24dp"/>
    <ImageView
       android:layout_marginTop="35dp"
         android:layout_centerHorizontal="true"
        android:id="@+id/iv_extra_service_image"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <TextView
        android:maxLines="2"
        android:layout_below="@id/iv_extra_service_image"
        android:textSize="12sp"
        android:text="Fridge Cleaning"
        android:id="@+id/tv_extra_service_name"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="10sp"
        android:gravity="center"
        android:text="30 m 40.00 AED"
        android:id="@+id/tv_extra_service_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_extra_service_name"
        />

</RelativeLayout>
